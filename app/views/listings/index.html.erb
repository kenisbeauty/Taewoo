
<h1>Listings</h1>

<table  class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
       <th>Price</th>
      <th>Available_from</th>
      <th>Available_to</th>

     <th colspan="8"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.address %></td>
        <td><%= listing.price %></td>
        
        <td><%= listing.availability_from %></td>
        <td><%= listing.availability_to %></td>
        
        <td><%= link_to 'Show', listing, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing),class: "btn btn-link"%></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
